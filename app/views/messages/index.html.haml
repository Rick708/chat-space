.head
  %h1 チャットグループが作成されました。

#chat__side
  .chat__side__var
    .chat__side__var__user
      %p Rick
    .chat__side__var__menu
      = fa_icon 'edit' 
      = fa_icon 'cog'  
  .chat__side__group
  =render "group"


#main
  .main__header
    .main__header__group
      .main__header__group__name ネーム
      .main__header__member Members: 60期
    %a{class: "main__header__edit-blue"}Edit

  .main__body
  =render "body"

  .bottom__form
    .bottom__form__icon 
    %label.upload-label
      %input.file-form{:type => "file"}
      %i.fa.fa-image
    %input{class: "bottom__form__text",type: "text",placeholder: "Type a message" ,name: ""}
    %input{class: "bottom__form__text__submit",type: "submit",value: "send"}